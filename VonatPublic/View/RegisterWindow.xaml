<Window x:Class="VonatPublic.View.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VonatPublic.View"
        mc:Ignorable="d"
        Title="RegisterWindow"
        Style="{ StaticResource ResourceKey=BaseWindows}">
    <Grid>
        <TextBox Style="{StaticResource ResourceKey=tbUsername}"/>
        <TextBox Style="{StaticResource ResourceKey=tbEmail}"/>
        <PasswordBox Style="{StaticResource ResourceKey=BasePasswordBox}"/>
        <Button Content="Mégse" Style="{StaticResource ResourceKey=RegisterButton}"/>
        <Button Content="Regisztrálás" Style="{StaticResource ResourceKey=LoginButton}"/>
    </Grid>
</Window>
