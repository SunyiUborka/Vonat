<Window x:Class="VonatPublic.View.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VonatPublic.View"
        mc:Ignorable="d"
        Title="RegisterWindow"
        Style="{ StaticResource ResourceKey=BaseWindows}">
    <Grid>
        <TextBox Style="{StaticResource ResourceKey=tbUsername}" x:Name="tbUsername"/>
        <TextBox Style="{StaticResource ResourceKey=tbEmail}" x:Name="tbEmail"/>
        <PasswordBox Style="{StaticResource ResourceKey=tbPassword1}" x:Name="tbPassword1"/>
        <PasswordBox Style="{StaticResource ResourceKey=tbPassword2}" x:Name="tbPassword2"/>
        <Button Content="Mégse" Style="{StaticResource ResourceKey=RegisterButton}" Click="Button_Click_2"/>
        <Button Content="Regisztrálás" Style="{StaticResource ResourceKey=LoginButton}" Click="Button_Click"/>
        <Label Content="Felhasználónév" Style="{StaticResource ResourceKey=lUsername}" />
        <Label Content="Jelszó" Style="{StaticResource ResourceKey=lPassword1}"/>
        <Label Content="Jelszó újra" Style="{StaticResource ResourceKey=lPassword2}"/>
        <Label Content="Email" Style="{StaticResource ResourceKey=lEmail}"/>
    </Grid>
</Window>
