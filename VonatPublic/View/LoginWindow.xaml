<Window x:Class="VonatPublic.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VonatPublic.View"
        mc:Ignorable="d"
        Title="LoginWindow"
        Style="{StaticResource ResourceKey=BaseWindows}">
    <Grid>
        <TextBox Style="{StaticResource ResourceKey=tbUsername}" x:Name="tbUsername"/>
        <PasswordBox Style="{StaticResource ResourceKey=tbPassword1}" x:Name="tbPassword"/>
        <Button Content="Belépés" x:Name="btnLogin" Style="{StaticResource ResourceKey=LoginButton}" Click="btnLogin_Click"/>
        <Button Content="Regisztráció" x:Name="btnRegister" Style="{StaticResource ResourceKey=RegisterButton}" Click="btnRegister_Click"/>
        <Label Content="Felhasználónév" Style="{StaticResource ResourceKey=lUsername}" />
        <Label Content="Jelszó" Style="{StaticResource ResourceKey=lPassword1}"/>
    </Grid>
</Window>
